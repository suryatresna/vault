<div class="row">
	<div class="col-md-8">
		<fieldset>
	  	<legend>Permission Information</legend>
	  	<div class="form-group">
	  		<%= f.label :name %>
	  		<%= f.text_field :name, class:"form-control", placeholder:"Permission name" %>
	  	</div>
	  	<div class="form-group">
	  		<%= f.label :label %>
	  		<%= f.text_field :label, class:"form-control", placeholder:"Permission label" %>
	  	</div>
	  	<div class="checkbox">
	  		<label>
	  		<%= f.check_box :system, class:"js-switch" %>
			is System
	  		</label>
	  	</div>
	</fieldset>
	</div>
	<div class="col-md-4">
		<fieldset>
			<legend>Action</legend>
			<div class="form-group">
				<%= f.submit "Save", class: "btn btn-primary" %>
			</div>
		</fieldset>
	</div>
</div>