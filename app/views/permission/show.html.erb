<% content_for :title do %>
	Edit Permission
<% end %>

<% content_for :titleTag do %>
	The permission of user permissions
<% end %>

<% content_for :body do %>

<div class="row">
	<div class="col-sm-12">
	  <div class="panel panel-white no-radius">
	    <div class="panel-body">
	      <h1>Permission#show [<%= @permission.label %>]</h1>
		  <div class="row">
				<div class="col-md-8">
					<fieldset>
				  	<legend>Permission Information</legend>
				  	<div class="form-group">
				  		<label for="name">Name</label>
				  		<p class="form-control" disabled><%= @permission.name %></p>
				  	</div>
				  	<div class="form-group">
				  		<label for="label">Label</label>
				  		<p class="form-control" disabled><%= @permission.label %></p>
				  	</div>
				  	<div class="checkbox">
				  		<label>
				  			<input type="checkbox" disabled <%= (@permission.system == true ? "checked" : nil) %>> is System 
				  		</label>
				  	</div>
				</fieldset>
				</div>
				<div class="col-md-4">
					<fieldset>
						<legend>Action</legend>
						<div class="form-group">
							<%= link_to "Edit", {controller: "permission", action: "edit", id: @permission.id}, class: "btn btn-primary" %>
						</div>
					</fieldset>
				</div>
			</div>
	    </div>
	  </div>
	</div>
</div>
<% end %>

