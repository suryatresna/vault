<div class="row">
	<div class="col-md-8">
		<fieldset>
	  	<legend>Site Information</legend>
	  	<div class="form-group">
	  		<%= f.label :name %>
	  		<%= f.text_field :name, class:"form-control", placeholder:"Site name" %>
	  	</div>
	  	<div class="form-group">
	  		<%= f.label :label %>
	  		<%= f.text_field :label, class:"form-control", placeholder:"Site label" %>
	  	</div>
	  	<div class="form-group">
	  		<%= f.label :domain %>
	  		<%= f.text_field :domain, class:"form-control", placeholder:"Site domain" %>
	  	</div>
	</fieldset>
	<fieldset>
		<legend>Permissions Allow</legend>
		<div class="form-group">
			<% permissions.each do |perm| %>
			<div class="checkbox">
				<label>
				  <input type="checkbox" class="js-switch" name="site[permissions][]" value="<%= perm.name %>" <%= ((@site.permissions.include? perm.name) ? 'checked' : nil) %>> <%= perm.name %> 
				</label>
			</div>
			<% end %>	
	  	</div>
	</fieldset>
	</div>
	<div class="col-md-4">
		<fieldset>
			<legend>Action</legend>
			<div class="form-group">
				<%= f.submit "Save", class: "btn btn-primary" %>
			</div>
		</fieldset>
	</div>
</div>